---
type WorkItem = {
	title: string;
	companyName: string;
	companyLocation: string;
	companyDuration: string;
};

const jobs: WorkItem[] = [
	{
		title: "Senior Software Engineer",
		companyName: "DMI (Digital Management, LLC)",
		companyDuration: "April 2021 - Present",
		companyLocation: "Indianapolis, IN",
	},
	{
		title: "Software Engineer",
		companyName: "DMI (Digital Management, LLC)",
		companyDuration: "January 2019 - April 2021",
		companyLocation: "Indianapolis, IN",
	},
];
---

<div>
	<h1 class="my-4 text-left text-3xl font-semibold text-blue">
		Work Experience
	</h1>
	<div class="space-y-8">
		{
			jobs.map((job) => (
				<div class="flex flex-col border border-red bg-white p-4 text-left text-red drop-shadow-sm">
					<div class="flex w-full justify-between">
						<div class="mb-2 text-xl font-semibold">{job.title}</div>
						<div class="text-sm font-medium">{job.companyDuration}</div>
					</div>
					<div class="text-sm font-medium">{job.companyName}</div>
					<div class="text-sm font-medium">{job.companyLocation}</div>
				</div>
			))
		}
	</div>
</div>
